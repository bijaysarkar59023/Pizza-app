<div class="container" style="padding-top:60px">
 <h1>Users Table  <span>	 <a class="btn btn-primary" href="/addDrink">AddDrink</a></span></h1>
<table class="table">
 <thead>
      <tr>
        <th>ID Number</th>
        <th>Drink Name</th>
        <th>Price</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% drink.forEach(function(drink){ %>
    <tbody>
     <tr>
        <td><%= drink._id%></td>
        <td><%= drink.name %></td>
        <td><%= drink.price %></td>
        <td><a class="btn btn-warning" href="/<%=drink._id%>/edit">Edit</a></td>
        <th><a class="btn btn-danger" href="/<%=drink._id%>/delete">Delete</a></th>
      </tr>
    </tbody>
    <% }) %>
</table>
</div>





   <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
